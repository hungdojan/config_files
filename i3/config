# Set mod key (Mod1=<Alt>, Mod4=<Super>)
set $mod Mod1
set $alt Mod1

include ./config.d/init.conf

# Configure border style <normal|1pixel|pixel xx|none|pixel>
default_border none
default_floating_border normal
hide_edge_borders none
floating_modifier $mod
focus_follows_mouse no
font pango: Bitstream Vera Sans, DejaVu Sans Mono 11

# change borders
# bindsym $mod+u border none
# bindsym $mod+y border pixel 1
# bindsym $mod+n border normal

# startup script
exec_always --no-startup-id ~/.config/i3/scripts/init_script.sh

# Start Applications
bindsym $mod+t exec --no-startup-id pkill picom
bindsym $mod+Ctrl+t exec --no-startup-id picom -b --config ~/.config/picom.conf
bindsym $mod+Shift+d --release exec "killall dunst; exec notify-send 'restart dunst'"

# split orientation
bindsym $mod+h split h;exec notify-send 'tile horizontally'
bindsym $mod+v split v;exec notify-send 'tile vertically'
bindsym $mod+q split toggle

# change focus between tiling / floating windows
# bindsym $mod+space focus mode_toggle
