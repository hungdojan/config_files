# List of valid properties:
#
# align
# color
# command
# full_text
# instance
# interval
# label
# min_width
# name
# separator
# separator_block_width
# short_text
# signal
# urgent

# Global properties
#
# The top properties below are applied to every block, but can be overridden.
separator=false
markup=pango

[media]
separator_block_width=5
command=~/.config/i3blocks/scripts/media_info.sh
interval=1
align=center
separator=true

