# i3blocks configuration file
#
# The i3blocks man page describes the usage of the binary,
# and its website describes the configuration:
#
#     https://vivien.github.io/i3blocks


# Global properties
separator=true
separator_block_width=15

[media_backward]
separator=false
separator_block_width=8
command=./music_backward.sh
interval=1

[media]
separator=false
separator_block_width=8
command=./media_info.sh
interval=1
align=center
markup=pango

[media_forward]
command=./music_forward.sh
interval=1

[memory]
command=./memory.sh
interval=5

[time]
command=date '+%Y/%m/%d %H:%M'
interval=1

[battery]
command=./my_battery.sh
interval=1
align=center
markup=pango

[lock]
separator=false
separator_block_width=5
full_text=""
command=i3-msg -q exec i3exit lock

[power-off]
full_text=""
command=i3-msg -q exec "i3-nagbar -t warning -m 'Do you want to power off?' -b 'Power off' 'i3-msg -q exec shutdown now'"
